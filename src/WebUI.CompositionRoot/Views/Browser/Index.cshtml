@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href='@Url.Content("~/Content/pure-min.css")'/>
    <style type="text/css">
        div {
            margin: 10px;
        }
        .button-go {
            background: rgb(66, 184, 221);
            color: white
        }
        .input-url {
            width: 80%;
        }
        .novalidate {
            border-color: #129FEA !important;
            color: grey !important;
        }
        html, body, .iframe, iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
    <script src='@Url.Content("~/Scripts/app.js")'></script>
    <meta name="viewport" content="width=device-width">
    <title>CaticalBrowser</title>
</head>
<body>
<div class="pure-form">
    <input type="url" placeholder="URL" id="url" class="input-url novalidate" />
    <input type="button" value="go" id="go" class="pure-button button-go" />
</div>
<div class="iframe">
    <iframe id="content" sandbox="allow-same-origin allow-scripts"></iframe>
</div>
</body>
</html>
